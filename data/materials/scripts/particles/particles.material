// Wyverns Assault - Particle Systems Materials

material Particle/Smoke
{
    technique
    {
        pass
        {
            lighting off
            scene_blend alpha_blend
            depth_write off
            texture_unit
            {
                texture particle_smoke.png
                tex_address_mode clamp
            }
        }
    }
}
